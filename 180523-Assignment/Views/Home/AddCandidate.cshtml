<div class="well col-md-6 col-lg-offset-3">  
    <h4>Add Candidate</h4>
    <br />
    <form method="post" action="/home/addcandidate">
        <input type="text" id="first-name" class="form-control" name="firstName" placeholder="First Name" />
        <br />
        <input type="text" id="last-name" class="form-control" name="lastName" placeholder="Last Name" />
        <br />
        <input type="text" id="cell-number" class="form-control" name="phonenumber" placeholder="Phone Number" />
        <br />
        <input type="text" id="email" class="form-control" name="email" placeholder="Email" />
        <br />
        <textarea rows="4" class="form-control" name="notes" placeholder="Notes"> </textarea>
        <br />
        <button class="btn btn-primary">Save</button>
    </form>
</div>


